local Rayfield = loadstring(game:HttpGet("https://raw.githubusercontent.com/SiriusSoftwareLtd/Rayfield/refs/heads/main/source.lua"))()

local Window = Rayfield:CreateWindow({
	Name = "Brainrot Tool Buyer",
	LoadingTitle = "Buyer thingy",
	LoadingSubtitle = "by African boy",
	ConfigurationSaving = {
		Enabled = false
	}
})

local MainTab = Window:CreateTab("Menu", 4483362458)

-- Initial selected item
local args = { "Invisibility Cloak" }

-- Create the Buy button first
MainTab:CreateButton({
	Name = "üõí Buy Selected Item",
	Callback = function()
		if args[1] and args[1] ~= "" then
			local success, err = pcall(function()
				game:GetService("ReplicatedStorage")
					:WaitForChild("Packages")
					:WaitForChild("Net")
					:WaitForChild("RF/CoinsShopService/RequestBuy")
					:InvokeServer(unpack(args))
			end)

			if success then
				print("‚úÖ Bought:", args[1])
			else
				warn("‚ùå Buy error:", err)
			end
		else
			warn("‚ö†Ô∏è No item selected.")
		end
	end
})

-- Label to show current selection
local selectedLabel = MainTab:CreateLabel("Selected Item: " .. args[1])

-- Function to update selected item
local function setItem(name)
	args[1] = name
	selectedLabel:Set("Selected Item: " .. name)
	print("üîÑ Selected item set to:", name)
end

-- ‚úÖ Full item list with "Trap" added
local itemList = {
	"Invisibility Cloak",
	"Boogie Bomb",
	"Ruby Slap",
	"Medusa's Head",
	"Dark Matter Slap",
	"Flame Slap",
	"Quantum Cloner",
	"All Seeing Sentry",
	"Nuclear Slap",
	"Rainbowrath Sword",
	"Galaxy Slap",
	"Laser Cape",
	"Trap"
}

-- Create buttons for each item
for _, item in ipairs(itemList) do
	MainTab:CreateButton({
		Name = item,
		Callback = function()
			setItem(item)
		end
	})
end
